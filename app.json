{
  "expo": {
    "name": "FitBalance",
    "slug": "FitBalance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/FitBalanceLogo.jpg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["central"],
          "bluetoothAlwaysPermission": "Permitir a FitBalance conectar con dispositivos Bluetooth"
        }
      ],
      "expo-activity-recognition",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir a FitBalance acceder a la c√°mara",
          "recordAudioAndroid": true
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "ndkVersion": "21.4.7075529",
            "cmakeVersion": "3.18.1",
            "kotlinVersion": "1.8.10"
          }
        }
      ]
    ],
    "android": {
      "package": "com.fitbalance",
      "adaptiveIcon": {
        "foregroundImage": "./assets/FitBalanceLogo.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "runtimeVersion": "1.0.1",
      "permissions": [
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.INTERNET"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "ios": {
      "bundleIdentifier": "com.ayasc.nutifrut",
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Permitir a FitBalance usar Bluetooth para conectar con dispositivos de salud"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "82f4234e-ccbc-4e4d-9b39-7ff1b567c9ff"
      }
    },
    "owner": "ayasc",
    "updates": {
      "url": "https://u.expo.dev/82f4234e-ccbc-4e4d-9b39-7ff1b567c9ff"
    }
  }
}
